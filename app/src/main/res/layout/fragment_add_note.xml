<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_viw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/note_book_color_main_fon">

    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autofillHints="username"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="fill_horizontal"
        android:hint="@string/add_note"
        android:inputType="textMultiLine|textCapSentences"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:textColor="@color/my_fon"
        android:textColorHint="@color/grey_fon"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/floatBtnSaveFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey_fon"
        app:layout_constraintBottom_toBottomOf="@+id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="username"
        android:backgroundTint="@android:color/transparent"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textCapSentences"
        android:maxLength="38"
        android:maxLines="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/my_fon"
        android:textColorHint="@color/grey_fon"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/floatBtnSaveFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:background="@color/my_fon"
        android:backgroundTint="@color/my_fon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/note_book_color_main_fon"
            android:text="@string/save"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>