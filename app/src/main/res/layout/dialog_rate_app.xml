<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rateCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/rate_stroke"
    app:cardBackgroundColor="@color/rate_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="20dp"
        android:paddingBottom="18dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/shape_radius"
            android:layout_marginBottom="14dp"
            android:clipToPadding="false">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="@color/rate_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/support_the_app"
                android:textSize="12sp"
                android:textColor="@color/rate_text_secondary"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enjoying_the_app"
            android:textColor="@color/rate_text_primary"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/if_you_like_it"
            android:textColor="@color/rate_text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:includeFontPadding="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRate"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="18dp"
            android:text="@string/rate_on_google_play"
            android:textAllCaps="false"
            android:textColor="@color/rate_on_accent"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/rate_accent"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/rate_on_accent"
            app:icon="@android:drawable/ic_menu_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLater"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/later"
                android:textAllCaps="false"
                android:textColor="@color/rate_on_tonal"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/rate_tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNoThanks"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/no_thanks"
                android:layout_marginStart="12dp"
                android:textAllCaps="false"
                android:textColor="@color/rate_on_tonal"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/rate_tonal" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
