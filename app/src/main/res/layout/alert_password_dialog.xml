<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/note_book_color_darker">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/note_book_color_darker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSavePassword" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btnCancelPassword"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/note_book_color_main_fon"
            android:backgroundTint="@color/note_book_color_main_fon"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minWidth="120dp"
            android:textAlignment="center"
            app:cardCornerRadius="7dp"
            app:layout_constraintStart_toStartOf="@+id/customContainer"
            app:layout_constraintTop_toBottomOf="@+id/customContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Скасувати"
                android:textColor="@color/my_fon"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/customContainer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/note_book_color_main_fon"
            android:backgroundTint="@color/note_book_color_main_fon"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/titlePasswordDialog"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:backgroundTint="@android:color/transparent"
                android:cursorVisible="true"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:textColor="@color/my_fon"
                android:textColorHint="@color/color_hint"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnSavePassword"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn"
            android:backgroundTint="@color/note_book_color_main_fon"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:minWidth="120dp"
            android:textAlignment="center"
            app:cardCornerRadius="7dp"
            app:layout_constraintEnd_toEndOf="@+id/customContainer"
            app:layout_constraintTop_toBottomOf="@+id/customContainer">

            <TextView
                android:id="@+id/tvSavePasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/save"
                android:textColor="@color/my_fon"
                android:textSize="16sp" />
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>