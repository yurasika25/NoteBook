<resources>
    <style name="Theme.NoteBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/note_book_color_main_fon</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/easy_notebook_background</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="alertDialogTheme">@style/NoteBookAlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/NoteBookAlertDialogTheme</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorSecondary">@color/easy_notebook_background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/note_book_color_main_fon</item>
    </style>

    <style name="NoteBookAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#FFFFFF</item>
        <item name="elevation">0dp</item>
        <item name="materialAlertDialogTitleTextStyle">@style/NoteBookAlertDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/NoteBookAlertDialogBody</item>
        <item name="buttonBarPositiveButtonStyle">@style/NoteBookAlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NoteBookAlertDialogPositiveButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/NoteBookAlertDialogPositiveButton</item>
    </style>

    <style name="NoteBookAlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="lineSpacing">24sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="NoteBookAlertDialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NoteBookAlertDialogPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/note_book_color_main_fon</item>
        <item name="rippleColor">@color/note_book_color_main_fon</item>
    </style>
</resources>